@(signupForm: Form[User])

@import helper._
@import helper.twitterBootstrap._
@title={
	<p> Sign up test</p>
}

@main(title, nav = "signup"){
	@helper.form(action=routes.SignUp.submit){
		<fieldset>
			<legend>Create a user</legend>
			@inputText(
				signupForm("name"),
				'_label -> "Username",
				'_help  -> "Please pick another username",
				'_error	->	signupForm.globalError
			)
				@inputText(
				signupForm("email"),
				'_label	-> "Email",
				'_help	-> "Enter a valid email address"
				)
		
			@inputPassport(
				signupForm("password"),
				'_label -> "Password",
				'_help	-> "A password has to be 6 characters"
				)
			@inputPassport(
				signupForm("repeatPassport"),
				'_label -> "Repeat Password",
				'_help -> "please repeat your password again",
				'_error -> signupForm.error("password")
				 )
		</fieldset>
	
	 <fieldset>

            @checkbox(
                signupForm("accept"),
                '_label -> None, '_text -> "You agree the Terms and conditions",
                '_showConstraints -> false
            )

        </fieldset>


                <div class="actions">
            <input type="submit" class="btn primary" value="Sign Up">
            <a href="@routes.Application.index" class="btn">Cancel</a>
        </div>
}
			
}